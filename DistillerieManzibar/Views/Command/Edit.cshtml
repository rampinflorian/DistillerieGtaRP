@using DistillerieManzibar.Enums
@model DistillerieManzibar.Models.Command

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="shadow p-3 mb-5 bg-light rounded">
            <h1>Editer</h1>
            <h4>Commandes</h4>
            <hr/>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CommandId"/>
                <input type="hidden" asp-for="DeliveryAt"/>
                <input type="hidden" asp-for="BilledAt"/>
                <input type="hidden" asp-for="CreatedAt"/>
                <input type="hidden" asp-for="PricingId"/>
                <div class="form-group">
                    <label asp-for="LiquidCategory" class="control-label"></label>
                    <select asp-for="LiquidCategory" asp-items="@Html.GetEnumSelectList<LiquidCategory>()" class="form-control"></select>
                    <span asp-validation-for="LiquidCategory" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control"/>
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Company" class="control-label"></label>
                    <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Modifier" class="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>