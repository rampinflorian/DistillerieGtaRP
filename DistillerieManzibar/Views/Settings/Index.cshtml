@using DistillerieManzibar.Enums
@model Pricing
@{
    ViewData["Title"] = "Paramétrages";
    List<Pricing> pricings = ViewBag.Pricings;
}

<div class="shadow p-3 mb-5 bg-light rounded">
    <h1>@ViewData["Title"]</h1>
    <div class="d-flex flex-row-reverse">
    </div>
    <div class="row">
        <div class="col-3">
            <h4>Nouveau tarif</h4>
            <form asp-action="Index">
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LiquidCategory" class="control-label"></label>
                    <select asp-for="LiquidCategory" class="form-control" asp-items="@Html.GetEnumSelectList<LiquidCategory>()"></select>
                    <span asp-validation-for="LiquidCategory" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Company" class="control-label"></label>
                    <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Ajouter" class="btn btn-primary"/>
                </div>
            </form>
        </div>
        <div class="col">
            <div class="overflow-auto" style="max-height: 600px;">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Socité</th>
                        <th>Type de liquide</th>
                        <th>Prix</th>
                        <th>Création</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (Pricing pricing in pricings)
                    {
                        <tr>
                            <td>@pricing.Company.Name</td>
                            <td class="text-center">
                                @if (pricing.LiquidCategory == LiquidCategory.Alcool)
                                {
                                    <i class="fas fa-beer" style="color: #fd7e14" data-toggle="tooltip" data-placement="top" title="Alcool"></i>
                                }
                                else
                                {
                                    <i class="fas fa-tint text-primary" data-toggle="tooltip" data-placement="top" title="Eau"></i>
                                }
                            </td>
                            <td>$ @pricing.Price</td>
                            <td>@pricing.CreatedAt.ToString("d")</td>

                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>